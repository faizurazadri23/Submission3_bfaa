<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_switch_reminder"
        android:layout_marginTop="24dp"
        android:text="@string/notifikasi_pengingat"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <Switch
        android:id="@+id/switch_reminder"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toEndOf="@id/txt_switch_reminder"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_bahasa"
        android:layout_marginTop="24dp"
        android:text="@string/pengaturan"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_reminder"/>

    <ImageView
        android:id="@+id/change_bahasa"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_pengaturan"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toEndOf="@id/txt_switch_reminder"
        app:layout_constraintTop_toBottomOf="@+id/switch_reminder"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/blue" />



</androidx.constraintlayout.widget.ConstraintLayout>